@media screen and (max-width: 1199px)
	.header
		min-height 70px
	.header .navbar-toggle
		display block
		background-color white
		padding 15px 12px
		.icon-bar
			background-color red_regular
			width 28px
			height 4px
	.menu__list
		float none
		margin-right 0
	.navbar-collapse
		padding-right 0
		padding-left 0
	.navbar-nav
		margin 0
	.menu__list .menu__item
		margin-left 0
		
	.question-btn
		top inherit

@media screen and (min-width: 992px) and (max-width: 1200px)
	.topbar__options
		float left !important
		padding-left 0
	.navbar-header
		width 100%
		.logo
			float none
			margin-left auto
			margin-right auto
			text-align center
			display block
	.menu__list
		margin-right 0
		float none
	
		
