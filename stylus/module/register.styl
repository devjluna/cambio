.register
	padding 60px 0
	&__guie
		font-size 50px
		font-family bree_rgbold
		text-align center
		color yellow_regular
		margin-top 0
		&--sm
			font-size 18px
			color yellow_light
			margin-top 0
			margin-bottom 15px
			text-shadow(2px 2px 2px red_regular)

.wizard
	&.wzd
		margin 55px 0
		.steps
			display table
			width 100%
			position relative
			margin-left 0 !important
			li
				font-family bree_rgregular
				display table-cell
				text-align center
				width 33.333%
				padding 0
				margin 0
				background-color transparent
				&.two-steps
					width 50%
				&::before
					display block
					content ''
					width 100%
					height 8px !important
					font-size 0
					background-color red_dark
					position relative !important
					top 25px
					z-index 1 !important
				&:first-child::before
					max-width 51%
					left 50%
				&:last-child::before
					max-width 51%
					width 50%
					
				.wzd__step
					display inline-block
					color white
					font-size 27px
					z-index 2
					font-weight bold
					box-shadow(1px 3px 0 0 red_dark)
				.wzd__title
					display block
					font-size 25px

.actions
	&.wzd__actions
		position relative
		float none
		text-align center
		.btn
			margin 0 8px
			


		
	