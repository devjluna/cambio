.search-artists
	height 100%
	padding 60px 0
.categories
	background url(Images/categories-box.png) no-repeat center top
	background-size 100%
	padding 26px 28px 50px
	position relative
	margin-bottom 20px
	border-radius(6px)
	&--no-gradient
		background #f7423f !important
		margin-bottom 58px
		padding 40px 30px 10px
	&__title
		position absolute
		top -18px
		left -20px
		background-color #ff5b49
		font-size 18.7px
		margin 0
		width 214px
		height 35px
		line-height 35px
		padding-left 20px
		&::before
			content ''
			border 10px solid transparent
			border-top-color red_dark
			border-right-color red_dark
			top 100%
			position absolute
			left -1px
			z-index -1
	&__list
		margin 0
		padding 0
		list-style-type none
	li
		border-bottom 1px solid #ff5e64
		&.categories__item--active > a
			background-color lighten(red_light, 40%) !important
		&:last-child
			border-bottom 0
	&__item
		display block
		font-size 17px
		line-height 17px
		position relative
		vertical-align middle
		padding 11px 20px 11px 25px
		transitions(all .15s ease-in)
		border-radius(2px)
		&:hover
		&:focus
			background-color lighten(red_light, 40%) !important
			transitions(all .15s ease-in)
		&::after
			content '\f111'
			font-family 'FontAwesome'
			position absolute
			left 9px
			top 10px
			font-size 9px
	&__data
		padding 4px 0
		display block
		.fa
			width 30px
			height 30px
			border-radius(50%)
			background-color #ff5b49
			text-align center
			line-height @width
			margin-right 10px
	&__tab
		position absolute
		background-color #ff4c46
		width 105px
		right 40px
		bottom 100%
		display block
		font-size 15px
		padding 7px 10px
		text-align center
		border-radius(5px 5px 0 0)
		box-shadow(inset 0 -2px 6px lighten(red_dark, 10%))
		&:hover
			color yellow_regular !important
		
.album
	background-color #fff
	padding 5px 5px 7px
	margin-bottom 30px
	&__image
		height 120px
		background-color gray_light
		margin 0 auto
		&--youtube
			height 104.5px
			background-image url(/Images/ico-video.png)
			background-position center center
			background-repeat no-repeat
			background-color gray_light
			margin 0 auto
		&--soundcloud
			height 150px
			background-image url(/Images/ico-music.png)
			background-position center center
			background-repeat no-repeat
			background-color gray_light
			margin 0 auto
	&__mask
		opacity 0
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		background-color rgba(black, .6)
		text-align center
		padding-top 20px
		transitions(all .1s ease-in)
		.fa
			position absolute
			top 50%
			left 50%
			margin-left -18px
			margin-top -21px
			color white
	&__link
		position relative
		display block
		&:hover .album__mask
			opacity 1
			transitions(all .1s ease-in)
	&__name
	&__photo-amount	
		color lilac_dark !important
		display block
		font-family font_default
		font-size 12px
		font-weight bold
		line-height 14px
	&__name
		padding-top 8px
		overflow hidden
		white-space nowrap
		text-overflow ellipsis
	&__photo-amount
		color rgba(lilac_dark, .7) !important	

.form-search
	all-gradient(#f2423a, red_light)
	border-radius(4px)
	padding 16px
	margin-bottom 25px
			
.artists
	.artist
		background-color white
		padding 16px
		overflow hidden
		margin-bottom 28px
		border-radius(4px)
		display block
		&__img
			float left
			margin 0
			padding 0
			border 1px solid gray_light
			margin-right 20px
			a
			img
				display block
				width 105px
				height 105px
		&__views
			font-family bree_rgregular
			background-color #e3e3e4
			width 88px
			height 88px
			font-size 32px
			text-transform uppercase
			border-radius(50%)
			text-align center
			padding-top 28px
			margin-top 10px
			color lilac_dark
			span
				font-size 16px
				font-weight bold
		&__body
			overflow hidden
			color lilac_dark
			// padding-left 20px
			// border-left 3px solid lilac_dark
		&__name
			font-size 24px
			margin 0
			span
				font-size 14px
				color lilac_dark !important
		&__email
			margin-bottom 4px
			display block
		&__data
			font-family bree_rgregular
			color #8e8e8e
			margin-bottom 0
			dt
				width 120px
				text-align left !important
			dd
				margin-left 140px

.profile
	height 100%
	padding 0 0 100px
	position relative
	&::after
		content ''
		background url(Images/profile-cut.png) no-repeat center center
		width 100%
		height 630px
		position absolute
		z-index -1
		top 320px
	&__cover-photo
		height 318px
		width 100%
		background-color black
		// overflow hidden
		position relative
	&__header
		border-top 6px solid red_dark
		min-height 160px
		&__box
			position relative
	&__avatar
		position absolute
		top -68px
		left 95px
		z-index 8
		border-radius(50%)
		&::before
			content ''
			background url(Images/sprite.png) no-repeat -34px 0
			width 152px
			height 72px
			position absolute
			bottom -18px
			left -47px
			z-index -1
		&__img
			width 152px
			height 152px
			border-radius(50%)
			border 8px solid #fff
			background-color #fff
	&__views
		background-color #f7423f
		border-radius(50%)
		border-radius(50%)
		color lilac_dark
		font-family bree_rgregular
		font-size 32px
		height 90px
		margin-top 10px
		padding-top 28px
		text-align center
		text-transform uppercase
		width 90px
		color white
		box-shadow(2px 2px 2px lighten(red_regular, 10%))
		span
			font-size 16px
	&__social
		padding 40px 10px 78px 0
		margin-left 120px
		&__shared
			border-radius(3px)
			display block
			height 42px
			width 42px
			.fa
				line-height @width
	&__card
		padding-left 264px
		padding-top 12px
		margin-bottom 185px
		&__name
			margin 0
			font-size 30px
			color yellow_regular
			text-shadow(1px 3px 2px rgba(red_dark, .9))
		&__profile
			margin 0 0 14px
			font-family font_default
			font-size 14px
	&__actions
		button
			margin-bottom 15px
			text-transform uppercase

.change-avatar
	display none !important

// Detail photos styles
.categories__album-data
	margin-bottom 15px
.categories__album-data__name
.categories__album-data__date
	font-family bree_rgregular
	font-size 20px
.categories__album-data__date
	font-size 16px
.photo
	display block
	position relative
	margin-bottom 30px
	&:hover .photo__mask
		opacity 1
		transitions(all .1s ease-in)
	&__mask
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		opacity 0
		background-color rgba(lilac_dark, 0.5)
		text-align center
		transitions(all .1s ease-in)
	&__name
		font-size 16px
		color white
		width 100%
		display block
		position absolute
		left 50%
		margin-left -50%
		top 50%
		margin-top -4%

// Detail videos styles
.media
	font-family bree_rgregular
	padding-bottom 15px
	&__container
		background-color #000
	&__video
		margin-bottom 25px
	&__album-name
		color white 
		font-size 20px
		margin-bottom 14px
		display block
	&__list
		margin 0
		padding 0
	&__item
		list-style-type none
		margin-bottom 15px
		border-bottom 0 !important
		&--active > .media__item__link
			background-color #ccc
		&__link
			padding 10px
			background-color white
			// border-radius(4px)
			display block
		&__img
			display inline-block
			width 160px
			float left
		&__data
			margin-top 10px
			margin-left 175px
			h4
				font-size 22px
				color orange_light
				margin 0 0 4px
			span
				color gray_regular
				font-size 16px

.back
	position absolute
	top -40px
	right 30px
	text-transform uppercase
	color yellow_regular !important
	font-weight bold
	display block
	font-size 16px


.btn-wrapper
	padding 18px
	overflow hidden
#cropContainerModal
	width 280px
	height 280px
	// position relative
	border 1px solid #ccc
	margin-left auto
	margin-right auto
.cropControls i
	&.cropControlReset
	&.cropControlCrop
		display none

		