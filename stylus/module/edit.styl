.edit-container
	height 100%
	position relative
.edit-btn
	z-index 2
	background-color brown_light
	display inline-block
	width 42px
	height 42px
	text-align center
	line-height 42px
	border-radius(50%)
	cursor pointer
	position absolute
	&__icon
		color yellow_regular
		font-size 25px
		line-height 42px
	&--photo
		left 108px
		top 10px
	&--avatar
		left 20px
		top 35px
		
.question-btn
	z-index 2
	background-color brown_light
	display inline-block
	width 35px
	height 35px
	text-align center
	line-height 42px
	border-radius(50%)
	cursor pointer
	position absolute
	top -10px
	margin-left 10px
	&__modal
		position relative
		top -4px
	&__icon
		color yellow_regular
		font-size 25px
		line-height 42px


.cropit-header
	text-align center
	margin-bottom 20px
.cropit-image-input
	visibility hidden
	text-align center
// .cropit-image-background-container,
// .image-editor
