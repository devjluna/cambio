.gallery
	overflow hidden
.upload
	display inline-block
	float left
	width 210px
	padding 5px
	margin-right 37px
	background-color white
	margin-bottom 20px
	&:nth-child(3n+3)
		margin-right 0
	&__thumbnails
		position relative
		width 200px
		height 200px
		background-color #e0e0e0
		text-align center
		margin 0
		padding 0
		cursor pointer
		border 1px solid #ccc
		margin-bottom -1px
		img
			position absolute
			max-width 100% !important
			max-height 100% !important
			top 0
			right 0
			bottom 0
			left 0
			margin auto
				
	&__close
		position absolute
		width 25px
		height @width
		z-index 2
		display block
		right 5px
		top @right
		background-color red_light
		border-radius(50%)
		text-align center
		line-height @width
		font-size 25px
		display none
	&__btn
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		font-size 80px
		color red_regular
		display block
		cursor pointer
		text-align center
		line-height 25px
		padding-top 70px
	&__text
		font-size 25px
		font-family bree_rgregular
		line-height 14px
.fileinput .thumbnail
	height 100% !important
	padding 0
	background-color #e0e0e0
	border 0
	border-radius(0)

