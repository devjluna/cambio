// Custom style radio
.radios
	width 50%
	float left
input[type=radio].radio-input
	display none
	& + label
		&.radio-lbl
			display inline-block
			background-repeat no-repeat
			font-size 20px
			vertical-align middle
			cursor pointer
			margin-bottom 0 !important
			&.radio-lg
				background-position -1px 0
				padding-top 1px
				padding-left 45px
				height 32px
				line-height 32px
			&.radio-md
				background-position -1px -87px
				padding-left 28px
				letter-spacing -0.4px
				height 22px
				line-height 22px
				// margin-bottom 8px
				margin-top 6px
	&:checked
		& + label
			&.radio-lbl
				&.radio-lg
					background-position -1px -32px
				&.radio-md
					background-position -1px -65px

.quiz-question-block
	&.qhidden
		display none
label
	&.radio-lbl
		background-image url(Images/sprite.png)
		-webkit-touch-callout none
		-webkit-user-select none
		-khtml-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		float left
		font-weight normal
		font-size 17px !important
		&.radio-lg
			margin-right 55px
			font-size 17px !important
		&.radio-md
