@font-face {
	font-family: 'promperu';
	src:url('../fonts/promperu/promperu.eot?30ot2y');
	src:url('../fonts/promperu/promperu.eot?#iefix30ot2y') format('embedded-opentype'),
		url('../fonts/promperu/promperu.ttf?30ot2y') format('truetype'),
		url('../fonts/promperu/promperu.woff?30ot2y') format('woff'),
		url('../fonts/promperu/promperu.svg?30ot2y#promperu') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="pp-"], [class*=" pp-"] {
	font-family: 'promperu';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.pp-images:before {
	content: "\e600";
}
.pp-sounds:before {
	content: "\e601";
}
.pp-videos:before {
	content: "\e602";
}
